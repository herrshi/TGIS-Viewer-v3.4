<?xml version="1.0" ?>
<configuration>
	<style>
		<!--textColor,backgroundColor,rolloverColor,selectionColor,titleColor -->
		<colors>0x000000,0xFFFFFF,0xDDDDDD,0x3E6FBC,0x3E6FBC</colors>
		<navigationcolors>0xFFFFFF,0x3E6FBC,0xDDDDDD,0x3E6FBC,0xFFFFFF</navigationcolors>
		<alpha>1</alpha>
		<font name="微软雅黑" size="14" />
	</style>
	
	<socketinfo enable="false">
		<!-- 接收安全策略文件 -->
		<securitysocketip>128.64.25.42</securitysocketip>
		<securitysocketport>6000</securitysocketport>
		<!-- 接收数据 -->
		<datasocketip>128.64.25.42</datasocketip>
		<datasocketport>6001</datasocketport>
	</socketinfo>

	<arcgisserverip>128.64.151.220:6080</arcgisserverip>
<!-- 	<arcgisserverip>jiaotong.seisys.cn:8399</arcgisserverip> -->
	
	<geometryservice url="http://{serverip}/arcgis/rest/services/Geometry/GeometryServer" />

	<!-- UI elements -->
	<widget  left="10" top="10" 
		config="widgets/Navigation/NavigationWidget.xml"
		url="widgets/Navigation/NavigationWidget.swf" />
		    
	<widget left="3" bottom="3"
		config="widgets/Coordinate/CoordinateWidget.xml" 
		url="widgets/Coordinate/CoordinateWidget.swf" />
			
	<map top="0"  center="118.417947 31.337093" scale="48000"
			 scalebarvisible="false" esrilogovisible="false">
<!-- 	<map top="0" center="112.9894 28.185" scale="96000" -->
<!-- 		scalebarvisible="false" esrilogovisible="false"> -->
		<basemaps>
<!-- 			<layer label="矢量图" type="tiled" visible="true" -->
<!-- 				url="http://{serverip}/arcgis/rest/services/changsha/changsha_base_GHY/MapServer" /> -->
			<layer label="矢量图" type="tiled" visible="true"
				url="http://{serverip}/arcgis/rest/services/wuhu/wuhu_base_new/MapServer" />
			<layer label="卫星图" type="tiled" visible="false"
				url="http://{serverip}/arcgis/rest/services/wuhu/wuhu_satelite/MapServer" />
		</basemaps>
		
		<operationallayers>
			<layer label="发布段" type="dynamic" visible="true" autorefresh="0" 
				url="http://{serverip}/arcgis/rest/services/wuhu/wuhu_fbd/MapServer">
				<sublayer id="0" popupconfig="popups/WuHu/PopUp-FBD.xml"/>	
			</layer>
			
			<layer label="信号机" type="feature" visible="false" autorefresh="0"
				url="http://{serverip}/arcgis/rest/services/wuhu/wuhu_device/MapServer/0"
				popupconfig="popups/WuHu/PopUp-XHJ.xml">

				<uniquevaluerenderer field="STATE">
					<defaultlabel>未知</defaultlabel>
					<picturemarkersymbol url="assets/images/mapIcons/XinHaoJi-blue.png" yoffset="13" />

					<uniquevalueinfo value="connect" label="连接">
						<picturemarkersymbol url="assets/images/mapIcons/XinHaoJi-blue.png" yoffset="13" />
					</uniquevalueinfo>

					<uniquevalueinfo value="disconnect" label="中断">
						<picturemarkersymbol url="assets/images/mapIcons/XinHaoJi-red.png" yoffset="13" />
					</uniquevalueinfo>

					<uniquevalueinfo value="malfunction" label="异常">
						<picturemarkersymbol url="assets/images/mapIcons/XinHaoJi-yellow.png" yoffset="13" />
					</uniquevalueinfo>
				</uniquevaluerenderer>
			</layer>
			
			<layer label="摄像机" type="feature" visible="false" autorefresh="0"
				url="http://{serverip}/arcgis/rest/services/wuhu/wuhu_device/MapServer/1"
				popupconfig="popups/WuHu/PopUp-XHJ.xml">

				<uniquevaluerenderer field="STATE">
					<defaultlabel>未知</defaultlabel>
					<picturemarkersymbol url="assets/images/mapIcons/SheXiangJi-blue.png" yoffset="13" />

					<uniquevalueinfo value="connect" label="连接">
						<picturemarkersymbol url="assets/images/mapIcons/SheXiangJi-blue.png" yoffset="13" />
					</uniquevalueinfo>

					<uniquevalueinfo value="disconnect" label="中断">
						<picturemarkersymbol url="assets/images/mapIcons/SheXiangJi-red.png" yoffset="13" />
					</uniquevalueinfo>

					<uniquevalueinfo value="malfunction" label="异常">
						<picturemarkersymbol url="assets/images/mapIcons/SheXiangJi-yellow.png" yoffset="13" />
					</uniquevalueinfo>
				</uniquevaluerenderer>
			</layer>
		</operationallayers>
	</map>

	<!-- widgets organized into widget containers that manage close/open etc -->
	<!-- supported layout property options: horizontal(default)|float|vertical|fix -->
	<widgetcontainer layout="float">
<!-- 		<widget label="气象站" preload="open" -->
<!-- 			config="widgets/Overlay/WuHu/PointOverlayWidget-QiXiangZhan.xml"  -->
<!-- 			url="widgets/Overlay/PointOverlayWidget.swf"/> -->
			
		<widget label="警情" preload="open"
			config="widgets/Overlay/WuHu/PointOverlayWidget-policeEvent.xml" 
			url="widgets/Overlay/PointOverlayWidget.swf"/>

		<widget label="警员" preload="open"
			config="widgets/Overlay/WuHu/PointOverlayWidget-police.xml"
			url="widgets/Overlay/PointOverlayWidget.swf"  />
		
		<widget label="岗点" preload="open"
			config="widgets/Overlay/WuHu/PointOverlayWidget-policeSentry.xml"
			url="widgets/Overlay/PointOverlayWidget.swf" />
	</widgetcontainer>
	
