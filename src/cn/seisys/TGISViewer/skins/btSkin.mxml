<?xml version="1.0" encoding="utf-8"?>
<s:Skin xmlns:s="library://ns.adobe.com/flex/spark" xmlns:fx="http://ns.adobe.com/mxml/2009" xmlns:d="http://ns.adobe.com/fxg/2008/dt">
	<fx:Metadata>[HostComponent("spark.components.Button")]</fx:Metadata>
	<fx:Script>
		<![CDATA[
		]]>
	</fx:Script>
	
	<!-- 按钮的四种状态states -->
	<s:states>
		<s:State name="up"/>
		<s:State name="over"/>
		<s:State name="down"/>
		<s:State name="disabled"/>
	</s:states>
	
	<!-- 按下时添加阴影 -->
	<s:Rect  top="0" right="0" bottom="0" 
			 left="0" includeIn="down" >
		<s:fill>
			<s:SolidColor color="0x58abed" alpha="1" color.down="0x58abed" color.over="0x58abed"/>
		</s:fill>
		<s:stroke>
			<s:SolidColorStroke alpha="1" color="0x58abed" weight="1"/>
		</s:stroke>
	</s:Rect>
	
	<!-- 按钮的背景和边框 -->
	<s:Rect id="rect" excludeFrom="down" left="0" right="0" top="0" bottom="0" >
		<s:fill>
			<s:SolidColor alpha="1" color="#FFFFFF"/>
		</s:fill>
		<s:stroke>
			<s:SolidColorStroke alpha="1" color="#000000" weight="1"/>
		</s:stroke>
	</s:Rect>
	
	<s:Rect excludeFrom="down" left="2" right="2" top="2" >
		<s:fill>
			<s:LinearGradient rotation="90">
				<s:GradientEntry alpha=".5" color="0x4799CE"/>
				<s:GradientEntry alpha="1" color="0xFFFFFF"/>
			</s:LinearGradient>
		</s:fill>
	</s:Rect>
	
	<s:Label id="lableElement" fontSize="16" horizontalCenter="0" text="{hostComponent.label}"
			 textAlign="center" verticalAlign="middle" verticalCenter="1" visible.down="true"/>
</s:Skin>
