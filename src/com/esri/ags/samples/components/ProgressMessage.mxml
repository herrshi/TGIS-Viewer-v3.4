<!---

The component used to give user feedback that the heatmap widget is busy.
-->
<s:HGroup xmlns:fx="http://ns.adobe.com/mxml/2009"
          xmlns:s="library://ns.adobe.com/flex/spark"
          width="100%"
          horizontalAlign="center"
          includeInLayout="{msgVisible}"
          verticalAlign="middle"
          visible="{msgVisible}">

    <fx:Script>
        <![CDATA[
            [Bindable]
            [Embed(source="../../../../../assets/images/loader.swf")]
            private var loader:Class;

            [Bindable]
            private var msgVisible:Boolean = false;

            /**
             * @param msg
             */
            public function showMessage(msg:String, swfVisible:Boolean):void
            {
                txtMessage.text = msg;
                swfMessage.visible = swfVisible;
                msgVisible = true;
            }

            /**
            * @param msg Message to display.
            */
            public function setMessage(msg:String):void
            {
                txtMessage.text = msg;
            }

            public function clearMessage():void
            {
                msgVisible = false;
            }
        ]]>
    </fx:Script>
    <fx:Declarations>
        <!-- Place non-visual elements (e.g., services, value objects) here -->

    </fx:Declarations>
    <!--- @private -->
    <s:SWFLoader id="swfMessage"
                 source="{loader}"
                 visible="false"/>
    <s:Label id="txtMessage"
             width="90%"
             text=""/>
</s:HGroup>
