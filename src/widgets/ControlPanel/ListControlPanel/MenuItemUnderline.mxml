<?xml version="1.0" encoding="utf-8"?>
<s:Group xmlns:fx="http://ns.adobe.com/mxml/2009"
		 xmlns:s="library://ns.adobe.com/flex/spark"
		 xmlns:mx="library://ns.adobe.com/flex/mx">
	<fx:Script>
		<![CDATA[
			[Bindable]
			private var _itemOpen:Boolean = false;
			
			public function set itemOpen(value:Boolean):void
			{
				_itemOpen = value;
			}
		]]>
	</fx:Script>
	<s:Line includeInLayout="{_itemOpen}"
			visible="{_itemOpen}">
		<s:stroke>
			<s:SolidColorStroke caps="square"
								color="0xffffff"
								weight="2"/>
		</s:stroke>
	</s:Line>
</s:Group>
