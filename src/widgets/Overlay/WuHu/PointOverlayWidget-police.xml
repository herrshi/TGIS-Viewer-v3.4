<!-- 警员 -->
<?xml version="1.0" ?>
<configuration>
	<type>police</type>
	<!-- 组件打开时通知页面 -->
	<widgetrunnotify></widgetrunnotify>
	<!-- 组件关闭时通知页面 -->
	<widgetclosenotify></widgetclosenotify>
	
	<popup>
		<title>{policeName}({gpsState})</title>
		<fields>
			<field name="policeName" />
			<field name="policeSn" alias="警号" visible="true"/>
			<field name="dutyName" alias="职务" visible="true"/>
			<field name="departmentName" alias="所属单位" visible="true"/>
			<field name="acquisitionTime" alias="同步时间" visible="true"/>
			<field name="m350Sn" alias="350M编号" visible="true"/>
			<field name="gpsState" alias="GPS状态" visible="false"/>
			<field name="policeId" alias="警员id" visible="false"/>
			<field name="interphoneCode" alias="手持终端编号" visible="false"/>
			<field name="pdaCode" alias="PDA编号" visible="false"/>
			<field name="phoneNum" alias="电话" visible="false"/>
			<field name="distance" alias="距离" visible="false"/>
		</fields>
		<showzoomtobutton>false</showzoomtobutton>
	
		<buttons>
			<button label="呼叫" action="openDevice" type="callPDA" idfield="policeId" />
			<button label="短信" action="openDevice" type="sendMessage" idfield="policeId" />
			<button label="查看轨迹" action="openDevice" type="gpsPoliceTrack"/>
		</buttons>
	</popup>
		
	<simplerenderer>
		<picturemarkersymbol url="assets/images/mapIcons/JingCha-blue.png" yoffset="13"/>
	</simplerenderer>
	
	<clickfunction>
		<action>showInfoWindow</action>
	</clickfunction>
</configuration>
