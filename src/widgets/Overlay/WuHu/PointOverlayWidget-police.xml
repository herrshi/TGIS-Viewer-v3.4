<!-- 警员 -->
<?xml version="1.0" ?>
<configuration>
	<type>police</type>
	<!-- 组件打开时通知页面 -->
	<widgetrunnotify></widgetrunnotify>
	<!-- 组件关闭时通知页面 -->
	<widgetclosenotify></widgetclosenotify>
	
	<popup>
		<title>{policeName}</title>
		<fields>
			<field name="policeName" />
			<field name="departmentName" alias="所属部门" visible="true"/>
			<field name="dutyName" alias="职务" visible="true"/>
			<field name="gpsState" alias="GPS状态" visible="true"/>
			<field name="interphoneCode" alias="PDA编号" visible="true"/>
			<field name="pdaCode" alias="PDA编号" visible="true"/>
			<field name="policeId" alias="警员id" visible="true"/>
			<field name="policeSn" alias="警号" visible="true"/>
			<field name="workContent" alias="工作内容" visible="true"/>
		</fields>
		<showzoomtobutton>false</showzoomtobutton>
	</popup>
	
	<simplerenderer>
		<picturemarkersymbol url="assets/images/mapIcons/JingCha-blue.png" yoffset="13"/>
	</simplerenderer>
</configuration>
